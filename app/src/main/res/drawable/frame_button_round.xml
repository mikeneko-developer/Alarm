<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:startColor="@color/colorButtonBackground_gradTop"
                android:endColor="@color/colorButtonBackground_gradBottom"
                android:angle="-90"/>
            <corners android:topLeftRadius="@dimen/btn_round_size"
                android:topRightRadius="@dimen/btn_round_size"
                android:bottomLeftRadius="@dimen/btn_round_size"
                android:bottomRightRadius="@dimen/btn_round_size"/>
            <stroke android:width="5dp"
                android:color="@color/colorButtonFrame"/>
        </shape>
    </item>
</selector>